calendarWidth = 250px
sideBarWidth = 250px
mainWidth = calc(100% - 16px - 16px - var(--timeline-width))

mainBlockRadius = 8.5px
mainBlockPadding = 24px

brand = #2F45C5
accent = #FB2B76

@font-face
  font-family 'Arimo'
  src url("../../assets/fonts/Arimo.ttf") format("truetype-variations")
  font-weight 200 800

@font-face
  font-family 'Arimo'
  src url("../../assets/fonts/Arimo-Italic.ttf") format("truetype-variations")
  font-weight 200 800
  font-style italic

:root
  --brand rgb(28, 59, 241)
  --accent #FB2B76
  --topHeight 0


*
  box-sizing border-box
  font-family 'Arimo', Helvetica, Arial, sans-serif !important
  scrollbar-width thin

body
  margin 0
  position absolute
  width 100vw
  height 100vh
  overflow hidden
  background #F7F7F7

  display flex
  justify-content center
  align-items center

.globalWrapper
  display flex
  flex-direction column
  height 100%
  max-height 100%

  .topBar
    display flex
    min-height 56px
    margin-bottom 16px

:global(#modals)
  font-family 'Arimo', Helvetica, Arial, sans-serif

:global(#app)
  padding 24px
  font-family 'Arimo', Helvetica, Arial, sans-serif
  height 100vh
  left 0
  bottom 0
  width 100vw
  max-width 1920px
  position relative

.app
  display flex
  height 100%
  max-height: calc(100vh - 36px);

.resizeHandle
  height 100%
  min-width 15px
  cursor col-resize

.sideBarWrapper
  width var(--sidebar-width)
  min-width var(--sidebar-width)
  margin-right 8px
  position relative
  display flex
  flex-direction column
  gap 16px
  

.sideBar
  border-radius 24px
  overflow-y auto
  background white
  padding: 16px 0
  flex-grow 1

.todayDate
  border-radius 16px
  overflow-y auto
  background white
  padding: 0 16px
  height 56px
  min-height 56px
  display flex
  align-items center
  gap 8px

  .currentDate
    font-size 22px
    font-weight 500

  .additionalDate
    font-size 14px
    font-weight 300
    opacity .7
    margin-top 4px

  .action
    margin-left auto
    cursor pointer

    svg
      height 22px
      color #9BABC5

    &.active svg
      color var(--brand)

.timerWrapper
  //min-height var(--topHeight)
  //max-height var(--topHeight)
  //margin 24px 12px
  padding 24px 12px
  padding-top 0

.timer
  width 100%
  min-height 72px
  border-radius 16px
  background var(--brand)


.verticalWrapper
  display flex
  flex-direction column
  width calc(100% - 16px - var(--sidebar-width))
  .mainAndTimeline
    display flex
    height var(--bottomHeight)

.main
  margin 0 8px
  flex-grow 1
  max-width calc(100% - 32px - var(--timeline-width));
  display flex
  flex-direction column

  &.noSidebar
    max-width 100%
    margin-right 0

.timeline
  width var(--timeline-width)
  min-width var(--timeline-width)
  overflow-y hidden
  padding 24px
  border-radius 24px
  background white
  display flex
  flex-direction column

  .tabs
    min-height 56px
    display flex
    align-items center
    justify-content center
    gap 24px
    margin-bottom -24px

    span
      cursor pointer

      svg
        height 26px
        color #9BABC5

      &.active svg
        color #3552FB

*::-webkit-scrollbar {
  width: 3px;
  opacity 0
}

*::-webkit-scrollbar-track {
  position relative
}

*::-webkit-scrollbar-thumb {
  width 3px
  border-radius 5px
  background transparent
  transition background .2s
}

*::-webkit-scrollbar:horizontal {
  height: 3px;
}

*::-webkit-scrollbar-thumb:horizontal {
  height 3px
}

*:hover::-webkit-scrollbar-thumb {
  background #DCDFE5
}