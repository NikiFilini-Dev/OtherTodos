.userInfo
  background white
  width var(--sidebar-width)
  border-radius 16px
  display flex
  align-items center
  padding 0 16px
  height 56px
  min-height 56px

  .info
    display flex
    flex-direction column
    margin 0 8px

    .username
      font-size 16px
      font-weight 600
      margin-bottom 2px

    .email
      font-size 12px
      color #9BABC5

  .signOut
    margin-left auto
    height 24px
    width 24px
    fill #9BABC5


.menu
  display flex
  min-height 100%
  align-items stretch
  margin-left 32px

  .item
    min-width 56px
    background white
    display flex
    align-items center
    justify-content center
    height 100%
    margin-right 8px
    border-radius 16px
    cursor pointer

    &.active
      padding 0 16px
      svg
        color black

    .name
      margin-left 8px
      font-size 14px
      font-weight 600

    svg
      height 28px
      width 28px
      color #9BABC5

.rightPart
  min-height 100%
  background white
  display flex
  align-items center
  justify-content center
  border-radius 16px
  margin-left auto
  position relative

  .block
    height 100%
    width 56px
    display flex
    align-items center
    justify-content center
    cursor pointer

    .hasNew
      width 16px
      height 16px
      border-radius 50%
      background red
      display flex
      justify-content center
      align-items center
      font-size 12px
      color white
      font-weight 600
      position absolute
      bottom 12px
      right 12px

    svg
      width 24px
