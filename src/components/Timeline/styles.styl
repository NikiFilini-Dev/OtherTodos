.wrapper
  position relative
  display flex
  flex-direction column
  max-height 100%
  gap 16px  
  overflow-y auto

.currentDate
  display flex
  align-items center
  flex-direction row !important

  .todayButton
    height 36px
    padding 0 24px
    border 1px solid #9babc54a
    color #9BABC5
    display flex
    align-items center
    justify-content center
    border-radius 8px
    margin-left auto
    cursor pointer

    &.active
      color white
      background var(--brand)
      border-color var(--brand)

  .actions
    display flex
    align-items center

  .calendarTrigger
    height 1.2em
    width 1.2em
    margin-left 4px
    margin-right 8px
    cursor pointer
    display flex
    align-items center
    justify-content center
    color #9BABC5


    svg
      height 1.2em

    &.active
      color var(--brand)

  .dayDetail
    font-size 1.2em
    font-weight 500
    margin-right 3px

  .action
    margin-left 3px
    height 24px
    width 16px
    color #9BABC5
    display flex
    justify-content center
    align-items center
    cursor pointer

    svg
      height 1em
      fill #9BABC5

.allDayList
  display flex
  flex-direction column

  .allDayName
    font-size 12px
    color #9BABC5
    margin-bottom 4px


.block
  background white
  border-radius 24px
  border 1px solid rgba(0,0,0,.1)
  padding 24px
  display flex
  flex-direction column

.timelineWrapper
  overflow-y auto

.timeline
  margin-top: 8px
  position relative


.eventContainer
  position absolute
  right 12px
  width calc(100% - 31px - 8px - 8px - 16px)
  top var(--start)
  height calc(var(--end) - var(--start))
  border-radius 8px
  overflow hidden
  z-index 3

  .eventStretch
    position absolute
    bottom 0
    height 6px
    width 100%
    //background rgba(0,0,0,.05)
    cursor pointer
.now
  position absolute
  top calc(var(--now-offset) - 7px)
  display flex
  width 100%
  font-size 11px
  align-items center
  z-index 100

  span
    color var(--accent)
    margin-right 3px
    line-height 1em
    width 30px
    background white

  .line
    height 1px
    width calc(100% - 31px - 3px - 3px)
    background var(--accent)
    position relative

    right 0

    &::before
      content " "
      width 11px
      height 11px
      border-radius 50%
      position absolute
      top -5px
      left 0
      background var(--accent)

.hour
  height calc(var(--hour-height) + var(--font-size))
  display flex
  font-size var(--font-size)
  padding-right 3px
  position relative

  &:last-child
    height 1em

  span
    width 31px
    margin-right 4px
    color #5C5C5C
    margin-top .3em

  .dash
    width 100%
    height: 1em
    background-image linear-gradient(to right, #DCDFE5 6px, transparent 6px)
    background-position bottom
    background-size 16px 1px
    background-repeat repeat-x

  &::before
    content " "
    width calc(100% - 31px - 12px)
    position absolute
    top var(--hour-height)
    right 8px
    height 1px
    max-height 1px
    overflow hidden
    background-image linear-gradient(to right, #DCDFE5 6px, transparent 6px)
    background-position bottom
    background-size 16px 1px
    background-repeat repeat-x
    opacity .4
    z-index 0
  &:last-child::before
    display none

.tabs
  display flex
  gap 16px
  margin-bottom 16px

  .tab
    flex-grow 1
    display flex
    align-items center
    justify-content center
    height 32px
    border 1px solid #9BABC5
    border-radius 10px
    color #9BABC5

    &.active
      color white
      border-color var(--brand)
      background var(--brand)

