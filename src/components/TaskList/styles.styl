.wrapper
  display flex
  flex-direction column
  //margin-bottom 16px

.info
  display flex
  align-items center
  padding 23px 16px
  color rgba(22, 25, 56, 1)

.icon
  height 1.3em

.actions
  margin-left auto
  display flex

.actions > *
  margin-left 8px

.name
  font-weight 600
  font-size 18px
  margin-left 12px

.nameInput
  font-weight 600
  font-size 18px
  padding 0
  border 0
  background transparent
  margin-left 12px

  &:active, &:focus
    outline none

.tasksCount
  color #9BABC5
  margin-left 6px

.tasks
  display flex
  flex-direction column
  min-height 16px

.count
  display flex
  align-items center
  color rgba(155, 171, 197, 1)

  svg
    fill rgba(155, 171, 197, 1)
    margin-right 12px

.fold
  width 12px
  height 12px
  margin-left 24px
  display flex
  align-items center
  justify-content center
  cursor pointer
  transform rotate(90deg)
  transition transform .2s

  svg
    height 1em
    fill rgba(155, 171, 197, 1)

  &.active
    transform rotate(0deg)

.delete
  height 32px
  width 32px
  display flex
  align-items center
  justify-content center
  cursor pointer

  svg
    height 1em
    fill rgba(155, 171, 197, 1)


.listWrapper
  max-height: 50000px;
  transition: max-height 0.55s ease-in;
  //padding-left 24px
  &.folded
    max-height: 0;
    transition: max-height 0.35s ease-out;
    overflow: hidden;