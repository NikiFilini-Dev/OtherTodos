.wrapper
  display flex
  position absolute
  top calc(100% + 16px)
  right 0
  background white
  z-index 1000000
  flex-direction column
  width 450px
  overflow-y auto
  padding 24px
  border-radius 16px
  box-shadow 0 6px 41px -8px rgba(0, 0, 0, .27)
  max-height calc(100vh - 176px)

  .info
    display flex
    margin-bottom 16px
    .title
      font-weight 600

    .markSeen
      margin-left auto
      font-weight 500
      color var(--brand)
      cursor pointer

  .logWrapper
    font-size 14px
    padding 12px
    border-top 1px solid rgba(0,0,0,.08)
    display flex

    .log
      display flex
      flex-direction column
      padding 16px
      border-radius 16px
      overflow hidden
      position relative
      flex-grow 1
      color #161938
      font-size 12px
      font-weight 500
      line-height 16px
      gap 8px

      .datetime
        font-size 12px
        color #9BABC5
        font-weight 300
        z-index 2
        display flex


      &::before
        background #9BABC5
        opacity .1
        content " "
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        z-index -1

    &.new
      //background rgba(100, 10 ,10, .1)
      border-left 3px solid var(--brand)

    &:last-child
      padding-bottom 0

