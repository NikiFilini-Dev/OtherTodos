.wrapper
  display flex
  position absolute
  top calc(100% + 16px)
  right 0
  background white
  z-index 1000000
  flex-direction column
  width 450px
  height 300px
  overflow-y auto
  padding 24px
  border-radius 16px
  box-shadow 0 6px 41px -8px rgba(0, 0, 0, .27)

  .info
    display flex
    margin-bottom 16px
    .title
      font-weight 600

    .markSeen
      margin-left auto
      font-weight 500
      color var(--brand)
      cursor pointer

  .log
    font-size 14px
    padding 12px
    border-top 1px solid rgba(0,0,0,.08)

    &.new
      //background rgba(100, 10 ,10, .1)
      border-left 3px solid var(--brand)

    &:last-child
      padding-bottom 0

    .datetime
      font-size 12px
      margin-top 6px
      color #9BABC5