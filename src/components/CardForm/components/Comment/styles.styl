.comment  display flex  flex-direction column  padding 22px 0  border-top 1px solid #EEEFF0  .top    display flex    margin-bottom 12px    align-items center    .info      display flex      flex-direction column      margin-bottom 0      margin-left 12px      .name        color #161938        font-size 14px        font-weight 500        margin-bottom 3px      .date        font-size 12px        colot #9BABC5    .actions      margin-left auto      display flex      align-items center      .action        height 24px        width 24px        cursor pointer        display flex        align-items center        justify-content center        margin-left 6px        color #9BABC5        &.active          color var(--brand)        svg          height 18px          width 18px          color #9BABC5          &.awesome            fill #9BABC5  .text    color #161938    font-size 14px    overflow hidden    text-overflow ellipsis.editor  font-size 14px  --editor-padding 16px  border-radius 16px  background #F9F9F9.mentions  display flex  flex-direction column  max-height 260px  overflow-y auto  margin 8px 0  .title    font-size 14px    padding 8px    padding-bottom 0    font-weight 600  .user    display flex    align-items center    padding 8px    cursor pointer    transition background .2s    border-radius 8px    margin-top 4px    &:hover      background rgba(0,0,0,.04)    & > span      margin-left 8px      font-size 14px      font-weight 500