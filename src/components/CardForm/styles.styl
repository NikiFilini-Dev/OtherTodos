.wrapper  background rgba(22, 25, 56, 0.3)  backdrop-filter blur(25px)  width 100%  height 100%  position absolute  left 0  top 0  display flex  justify-content center  align-items center  z-index 1000000  pointer-events all.modal  width 844px  min-height 549px  background white  border-radius 24px  max-height 100vh.modalPart  padding 36px 39px  border-bottom 1px solid #EEEFF0  max-height calc(100vh - 117px)  overflow-y auto  &.mainPart    display flex  &:last-child    border-bottom 0.head  display flex  .executorWrapper    display flex    align-items center    .executorAvatar      margin-right 16px    .executorInfo      display flex      flex-direction column      font-size 14px      color #9BABC5      .executorTrigger        display flex        font-size 16px        margin-top 4px        cursor pointer        font-weight 600        color #161938        svg          height 16px          margin-left 12px          fill #9BABC5  .actions    margin-left auto    display flex    align-items center    .add      height 44px      padding 0 21px      background #15DA91      display flex      align-items center      color white      border-radius 16px      cursor pointer      &.done        background #F1F1F1        color #9BABC5      svg        margin-right 11px        fill white        height .6em    .reject, .trash, .addTask      height 44px      width 44px      background #F1F1F1      display flex      align-items center      justify-content center      color #9BABC5      border-radius 16px      cursor pointer      margin-left 12px    .reject svg        height 14px    .trash svg      height 24px    .addTask      margin-left 0      svg        height 24px      &.active svg        color var(--brand)    .separator      height 44px      width 1px      background #EEEFF0      border-radius 8px      margin 0 11px.block  width 48px  height 48px  margin 6px 8px  background: #FFFFFF;  box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.08);  border-radius: 10px;  display flex  justify-content center  align-items center  cursor pointer  border 2px solid white  &.active    border-color var(--brand)  svg    width 36px    height 36px.cardName  font-size 20px  width 100%  border 0  margin-bottom 6px  &:active, &:focus    outline none  //& :global(#editor)  //  font-size 20px;  //  font-weight bold.cardText  border 0  font-size 14px  width 100%  &:active, &:focus    outline none.group  display flex  flex-direction column  margin-bottom 28px  color #161938  &:last-child    margin-bottom 0  .head    display flex    .action      margin-left auto      font-weight 600      font-size 14px      color var(--brand)      cursor pointer      user-select none      display flex      align-items center      svg        height 1.3em        margin-right 6px  .name    font-size 14px    color #9BABC5    font-weight 600    margin-bottom 8px    display flex    align-items center    svg      fill #9BABC5      height 1em      margin 0 6px      cursor pointer      transition transform .2s      &.rotated        transform rotate(180deg).main  flex-grow 1  margin-right 36px  max-width calc(100% - 256px - 36px).settings  background #F9F9F9  border-radius 16px  padding 22px  width 256px  min-height 400px  margin-left auto  .group    margin-bottom 16px    .name      margin-bottom 8px.dateTrigger  height 48px  background #F1F1F1  display flex  align-items center  width 100%  border-radius 16px  padding 0 16px  fontt-size 15px  font-weight 600.subtasks  display flex  flex-direction column  width 100%  .subtask    display flex    width 100%    padding 6px 0    border-bottom 1px solid rgba(0,0,0,.05)    &:last-child      border 0    .checkbox      margin-top 3px    textarea      flex-grow 1      margin-left 12px      font-size 16px      width 100%      border 0      &:active, &:focus        outline none    &.done textarea      text-decoration line-through      color #BDBECC    .action      width 24px      height 24px      display flex      justify-content center      align-items center      margin-left 12px      cursor pointer      svg        //margin-top 3px        height 1.2em        color #BDBECC.addSubtask  padding-top 12px  font-size 14px  font-weight 600  color var(--brand)  cursor pointer.progressWrapper  display flex  color #9BABC5  margin-top 12px  align-items center  font-size 14px  .progress    height 14px    border-radius 7px    background #EEF0FF    position relative    margin-left 12px    flex-grow 1    &::before      content " "      display block      width var(--donePercent)      height 100%      background var(--brand)      border-radius 7px      transition width .2s.tagsMenu  display flex  flex-direction column  overflow hidden  width 212px  .search    display flex    padding 16px    svg      height 18px      min-width 18px      margin-right 12px    input      border 0      font-size 1em      width calc(100% - 18px - 12px)      &:active, &:focus        outline none  .name    display block    width 100%    font-size 14px    font-weight 600    color #9BABC5    text-align left    padding 0 16px    padding-top 8px    border-top 1px solid #F2F2F2  .tags    padding 8px 16px    display flex    gap 6px    flex-wrap wrap.tagsMenuTrigger  display flex  height 44px  align-items center  padding 0 12px  border-radius 16px  background #F1F1F1  color #9BABC5  cursor pointer  margin-bottom 8px  svg    margin-right 12px    height 20px  .angle    margin-left auto    margin-right 0    fill #9BABC5    height 16px.tags  display flex  flex-wrap wrap.tag  font-size 14px  padding 4px 6px  border-radius 8px  color var(--color)  margin 3px  position relative  overflow hidden  &::before    content " "    display flex    width 100%    height 100%    left 0    top 0    background var(--color)    opacity .15    position absolute.files  display flex  gap 16px  padding 6px 0  flex-wrap wrap.newFile  width: 100px;  height: 100px;  background: #e2e7ff;  border-radius: 8px;  display: flex;  align-items: center;  justify-content: center;  cursor pointer  svg    width 48px    fill var(--brand).newComment  background #F9F9F9  margin 22px 0  margin-top 12px  border-radius 16px.usersMenu  min-width 250px  display flex  flex-direction column  padding 16px 0  .user    display flex    align-items center    height 48px    padding 0 16px    position relative    cursor pointer    &:hover::before      content " "      background var(--brand)      opacity .05      position absolute      left 0      top 0      width 100%      height 100%    .avatar      margin-right 12px