.screen
  height: 100%
  max-height 100%
  display flex
  flex-direction column
  overflow-y auto

.head
  padding 21px 26px
  background white
  border-radius 24px
  // border 1px solid rgba(0,0,0,.1)
  margin-bottom 24px

.info
  margin-bottom 26px
  display flex
  align-items center
  //justify-content space-between

.icon
  height 24px
  width 24px
  margin-right 12px
  position relative
  color #727272
  cursor pointer

  svg
    height 100%

.title
  font-weight 600
  font-size 24px
  margin-right 12px
  line-height 1em

.nameEdit
  font-weight 600
  font-size 24px
  margin-right 12px
  padding 0
  border 0
  border-bottom 1px solid lightgray
  font-family SF Pro Display, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
  height: 1.3em

  &:focus
    outline none

.actions
  display flex
  align-items center
  margin-left auto

  & > *
    margin-left 12px

.newTaskActions
  margin 0 20px
  margin-top 12px
  margin-bottom 36px

  & > *
    margin-right 6px

.listOfLists
  display flex
  flex-direction column
  overflow-y auto
  height 100%

.addCategory
  margin 0 20px
  margin-top 36px
  display flex
  align-items center
  color #9c9c9c
  cursor pointer

  svg
    margin-right 8px