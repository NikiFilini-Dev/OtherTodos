.screenWrapper  display: flex;  max-height: 100%;  position: relative;  height: 100%;  overflow: visible;.usersList  display flex  flex-direction column  margin-left 24px  background var(--brand)  color white  width 72px  min-width 72px  border-radius 16px  max-height calc(100vh - 86px)  overflow-y auto  overflow-x hidden.puller  margin-left auto.add  margin-top auto  width 72px  min-height 64px  display flex  align-items center  justify-content center  border-top 1px solid rgba(256,256,256, .15)  cursor pointer  svg    fill white    height 28px    width 28px.user  width 72px  height 72px  display flex  flex-direction column  align-items center  justify-content center  margin-top 24px  position relative  cursor pointer  .filterActiveMark    height 36px    width 4px    border-radius 0 2px 2px 0    background white    position absolute    top calc(50% - 18px)    left 0    opacity .5  .name    margin-top 6px    font-size 14px    max-width 100%    overflow hidden    text-overflow ellipsis    padding 0 8px    white-space nowrap  .count    font-size 14px    margin-top 4px    opacity .7.screen  display flex  flex-direction column  //max-height 100%  //height 100%  width calc(100% - 72px - 36px).head  padding 12px 16px  background white  border-radius 24px  border 1px solid rgba(0,0,0,.1)  margin-bottom 24px.info  display flex  align-items center.actionTrigger  margin-right 16px  display flex  align-items center  justify-content center  cursor pointer  width 44px  height 44px  border-radius 10px  background #F1F1F1  svg    width 28px    height 28px    color #9BABC5.actionTriggerLong  margin-right 16px  display flex  align-items center  justify-content center  cursor pointer  padding 0 16px  height 44px  border-radius 10px  background #F1F1F1  color #9BABC5  font-weight 500  svg    margin-left 6px    width 28px    height 28px    fill #9BABC5.title  font-weight 600  font-size 24px  margin-right 12px  line-height 1em.columns  display: flex;  flex-grow 1  max-height: 100%;  overflow: hidden;  overflow-x auto.menu  display flex  flex-direction column  align-items flex-start  text-align left  padding 16px  .menuName    font-size 14px    font-weight 500    color #9BABC5    margin-bottom 8px  .size    width 250px    height 44px    padding 0 16px    display flex    align-items center    margin-top 6px    font-size 16px    cursor pointer    svg      margin-left auto      height 16px      opacity 0    &.active      background #F7F7F7      border-radius 8px      svg        opacity 1.addColumn  height: 46px;  min-width: 46px;  display: flex;  align-items: center;  justify-content: center;  background: white;  border-radius: 16px;  border: 1px solid rgba(0,0,0,.1);  font-size: 1.5em;  color: var(--brand);  cursor: pointer;