.screenWrapper
  display: flex;
  max-height: 100%;
  position: relative;
  height: 100%;
  overflow: visible;

.screen
  display flex
  flex-direction column
  //max-height 100%
  //height 100%
  width 100%

.head
  padding 12px 16px
  background white
  border-radius 24px
  border 1px solid rgba(0,0,0,.1)
  margin-bottom 24px
  display flex
  align-items center
  font-size 18px
  font-weight 500

.columns
  display flex
  gap 24px
  overflow-x auto
  flex-grow 1

.column
  display flex
  flex-direction column
  min-width 250px
  width 250px
  overflow-y auto

  .columnHead
    height 48px
    min-height 48px
    padding 0 16px
    border-radius 16px
    background var(--columnColor)
    color white
    display flex
    align-items center
    margin-bottom 16px

    svg
      height 24px
      margin-right 12px