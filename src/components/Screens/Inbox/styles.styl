.screen
  height: 100%
  max-height 100%
  display flex
  flex-direction column
  overflow-y auto

.head
  padding 21px 26px
  background white
  border-radius 24px
  // border 1px solid rgba(0,0,0,.1)
  margin-bottom 24px

.info
  display flex
  align-items center
  justify-content space-between

.title
  font-weight 600
  font-size 24px
  margin-right 12px
  line-height 1em

.additional
  font-size 14px
  line-height 17px
  color #9BABC5

.addButton
  background var(--brand)
  width 32px
  height 32px
  display inline-flex
  justify-content center
  align-items center
  border-radius 8px
  cursor pointer

.addIcon
  width 11px
  height 11px

.newTaskActions
  margin 12px 20px

  & > *
    margin-right 6px

.listOfLists
  overflow-y auto
  display flex
  flex-direction column
  height 100%