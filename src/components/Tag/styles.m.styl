.tag
  margin-right 5px
  height 24px
  padding 0 10px
  font-size 14px
  color var(--tagColor, var(--brand))
  cursor pointer
  font-weight 500
  position relative
  display inline-flex
  align-items center
  justify-content center
  border-radius 8px
  overflow hidden
  white-space nowrap
  // background var(--tagColor, car(--brand))

  .dot
    background var(--tagColor, var(--brand))
    width 4px
    height 4px
    border-radius 50%
    margin-right 4px

  &::before
    content " "
    position absolute
    top 0
    left 0
    background var(--tagColor)
    opacity .1
    width 100%
    height 100%

  &.monotone
    color var(--brand)
    background transparent
    &::before
      background var(--brand)

  &.selected
    background var(--tagColor, var(--brand))
    color white

    .dot
      background white

  &.colored
    background var(--tagColor)
    color white

